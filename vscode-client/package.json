{
  "name": "universal-graph-intelligence",
  "displayName": "Universal Graph Intelligence",
  "description": "Microsoft 365 ecosystem through conversational AI",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:universalGraph.query"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "universalGraph.query",
        "title": "Query Microsoft 365",
        "category": "Universal Graph"
      },
      {
        "command": "universalGraph.listTools",
        "title": "List Available Tools",
        "category": "Universal Graph"
      }
    ],
    "keybindings": [
      {
        "command": "universalGraph.query",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  }
}
